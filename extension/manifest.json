{
    "manifest_version": 2,
    "name": "Quoted",
    "version": "0.1",
    "permissions": [
        "https://quotedserver.herokuapp.com/*",
        "identity",
        "tabs",
        "storage"
    ],
    "icons": { 
        "16": "icon16.png",
        "32": "icon32.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["tooltip.css"],
        "js": ["jquery-2.2.2.min.js", "content.js", "highcharts.js"]
    }],
    "browser_action": {
        "default_title": "Quoted",
        "default_icon": "icon16.png",
        "default_popup":"popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
    "toggle-feature": {
        "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
              },
      "description": "Toggle quote highlighting"
    }
  }
}
